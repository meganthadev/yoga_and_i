    <title>YogaAndI</title>
<style>

.topnav {
overflow: hidden;
background-color: #FFF8DC;
}

.topnav a {
float: left;
color: #F4A460;
text-align: center;
padding: 14px 16px;
text-decoration: none;
font-size: 15px;
}

.topnav a:hover {
background-color: #F4A460;
color: black;
}

.topnav a.active {
background-color: #F4A460;
color: white;
}
</style>
</head>
<body>


    <div class="nav">
      <% if logged_in? %>
      <div class="topnav">
        <a class="active" href="/">Home</a>
        <a href="/journal_entries/new">New Entry</a>
        <a href="/journal_entries">All Journal Entries</a>
        <a href="/logout">Logout</a>
      </div>
      <% end %>

    </div>

    <div class="wrapper">

      <% if flash[:message] %>
        <h4 style="color :green;"><%= flash[:message] %></h4>
      <% end %>

      <% if flash[:errors] %>
        <h4 style="color :red;"><%= flash[:errors] %></h4>
      <% end %>

        <%= yield %>

      <footer class="branding">
        <small>&copy; 2020 <strong>YogaAndI</strong></small>
      </footer>
    </div>

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
